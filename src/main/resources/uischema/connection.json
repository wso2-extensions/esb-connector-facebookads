{
  "connectorName": "facebookAds",
  "connectionName": "facebookAds",
  "title": "Facebook Ad Connection",
  "help": "Facebook Ad Connection",
  "testConnectionEnabled": true,
  "elements": [
    {
      "type": "attribute",
      "value": {
        "name": "connectionName",
        "displayName": "Connection Name",
        "inputType": "string",
        "defaultValue": "FB_AD_CONNECTION",
        "required": "true",
        "helpTip": "The name for the Facebook Ad connection.",
        "validation": "nameWithoutSpecialCharactors"
      }
    },
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "General",
        "elements": [
          {
            "type": "attributeGroup",
            "value": {
              "groupName": "Basic",
              "elements": [
                {
                  "type": "attribute",
                  "value": {
                    "name": "base",
                    "displayName": "Base URL",
                    "inputType": "string",
                    "defaultValue": "https://graph.facebook.com/v20.0",
                    "required": "true",
                    "helpTip": "The service root URL."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "accessToken",
                    "displayName": "Access Token",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "true",
                    "helpTip": "The access token to authenticate the request."
                  }
                }
              ]
            }
          }
        ]
      }
    },
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "Advanced",
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "blocking",
              "displayName": "Use Blocking Transport",
              "inputType": "checkbox",
              "defaultValue": false,
              "required": "false",
              "helpTip": "Use blocking transport for the operation."
            }
          }
        ]
      }
    }
  ]
}
